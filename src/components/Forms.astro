<style>
  section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    padding-top: 40px;
    padding-bottom: 60px;
  }

  form {
    padding-bottom: 40px;
  }

  .forms h2 {
    text-align: center;
    font-family: Cormorant Garamond;
    font-weight: 500;
    font-size: 1.5rem;
    font-weight: 600;
  }
  label {
    font-family: Cormorant Garamond;
    display: block;
    margin-top: 10px;
  }
  .sporgsmaal {
    font-weight: 600;
    font-size: 1rem;
    padding-top: 30px;
    font-family: poppins;
    color: #011961;
  }
  input[type="text"],
  input[type="email"] {
    width: 100%;
    padding: 8px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  .checkbox-group {
    margin-top: 10px;
    margin-bottom: 20px;
  }
  textarea {
    width: 100%;
    height: 100%;
  }

  @media screen and (min-width: 900px) {
    .forms {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding-left: 200px;
      padding-right: 200px;
    }
    .forms h2 {
      display: grid;
      grid-column: 1/3;
    }
  }
</style>
